@model ReviewViewModel

<div class="mt-5 text-white">
    <h5 class="text-white">Add Your Review</h5>
    <form asp-action="SubmitReview" method="post">
        <div class="form-group">
            <label asp-for="Rating" class="text-white">Stars</label>
            <select asp-for="Rating" class="form-control" required>
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i Star@(i > 1 ? "s" : "")</option>
                }
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="CustomerReview" class="text-white">Comment (optional)</label>
            <textarea asp-for="CustomerReview" class="form-control" rows="5"></textarea>
            <span asp-validation-for="CustomerReview" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="GameId" />
        <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <input type="submit" value="Submit Review" class="btn btn-primary mt-3" />
        </div>
    </form>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor.create(document.querySelector('[name="Content"]'));
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
