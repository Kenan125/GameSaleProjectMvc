        color: #ddd;
        text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        cursor: pointer;
    }

    .carousel-control-prev {
        left: 10px;
    }

    .carousel-control-next {
        right: 10px;
    }

    /* Card Styles */


    .card {
        margin-bottom: 20px;
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 14px;
        color: #666;
    }

    /* Review Styles */

    .review {
        margin-bottom: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .review-rating {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .review-comment {
        font-size: 14px;
        color: #666;
    }

    /* Form Styles */

    form {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    input, textarea {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

        input[type="submit"] {
            background-color: #4CAF50;
            color: navy;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #3e8e41;
            }

    /* Miscellaneous Styles */

    .checked {
        color: #ffd700;
    }

    .fa-star {
        font-size: 18px;
        margin-right: 5px;
    }

    .footer {
        background-color: #1f1f1f; 
        padding: 1rem;
        text-align: center;
        position: absolute;
        border: none;
        bottom: 0;
        width: 100%;
        color: #ffffff; 
        bottom:auto;
        height:115px;

    }

    
   

   
