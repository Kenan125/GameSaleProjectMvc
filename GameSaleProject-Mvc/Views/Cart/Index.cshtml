@model CartViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Items.Any())
{
        <table class="table">
            <thead>
                <tr>
                    <th>Game</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items)
            {
                        <tr>
                            <td>@item.GameName</td>
                            <td>@item.Price.ToString("C")</td> <!-- Format price as currency -->
                            <td>
                        <!-- Remove Button -->
                        <form action="@Url.Action("RemoveFromCart", "Cart")" method="post" style="display:inline;">
                            <input type="hidden" name="gameId" value="@item.GameId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                            </td>
                        </tr>
            }
            </tbody>
        </table>

        <h3>Total Price: @Model.TotalPrice.ToString("C")</h3> <!-- Display total price -->
    <!-- Checkout Form -->
    <form asp-action="Checkout" method="post">
        <button type="submit" class="btn btn-primary">Checkout</button>
    </form>
}
else
{
        <p>Your cart is empty.</p>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Continue Shopping</a> <!-- Link to continue shopping -->

