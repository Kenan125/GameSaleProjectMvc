@model CartViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Items.Any())
{
        <table class="table">
            <thead>
                <tr>
                    <th>Game</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items)
            {
                        <tr>
                            <td>@item.GameName</td>
                            <td>@item.Price.ToString("C")</td> <!-- Format price as currency -->
                        </tr>
            }
            </tbody>
        </table>

        <h3>Total Price: @Model.TotalPrice.ToString("C")</h3> <!-- Display total price -->

        <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary">Checkout</a> <!-- Example checkout button -->
}
else
{
        <p>Your cart is empty.</p>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Continue Shopping</a> <!-- Link to continue shopping -->

