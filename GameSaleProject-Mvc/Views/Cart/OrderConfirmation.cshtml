@model GameSaleViewModel
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="order-confirmation spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-body mb-4" style="box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
                    <h1 class="text-center">Order Confirmation</h1>
                    <h3 class="text-center">🎉 Thank you for your purchase! Here are the details of your order: 🎉</h3>
                    <p class="text-center">Happy Gaming 🎮</p>
                </div>

                <div class="order-details">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Game</th>
                                <th class="text-end">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.GameSaleDetails)
                            {
                                <tr>
                                    <td>@detail.Game.GameName</td>
                                    <td class="text-end">@detail.UnitPrice.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="total-section d-flex justify-content-between align-items-center mt-4">
                    <div class="total-box">
                        <h3>Total Price: @Model.TotalPrice.ToString("C")</h3>
                    </div>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary box-button">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
