@using GameSaleProject_Entity.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<section>
    <div class="container">
        <div class="title">
            <p>Giriş Yap</p>
        </div>
        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user_details">
                
                <div class="input_box">
                    <label asp-for="UserName" class="control-label">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adınızı giriniz" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>                
                
                    <div class="input_box">
                        <label asp-for="Password" class="control-label">Şifre</label>
                        <input asp-for="Password" class="form-control" placeholder="Şifrenizi giriniz" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
               
            </div>
            <div class="reg_btn">
                <input type="submit" value="Giriş Yap">
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}