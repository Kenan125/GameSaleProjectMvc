@model List<GameSaleProject_Entity.ViewModels.GameViewModel>
@{
    ViewData["Title"] = "Home Page";
    var causImages = Model.SelectMany(g => g.Images).Where(img => img.ImageUrl.Contains("Caus")).ToList();
}
<div id="carouselExampleIndicators" class="carousel slide custom-carousel mb-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for (int i = 0; i < causImages.Count; i++)
        {
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
        }
    </div>
    <div class="carousel-inner">
        @foreach (var image in causImages.Select((value, index) => new { Value = value, Index = index }))
        {
            <div class="carousel-item @(image.Index == 0 ? "active" : "")">
                <img src="@Url.Content(image.Value.ImageUrl)" class="d-block w-100 carousel-image" alt="Featured Game">
                
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container">
    <div class="row">
        @foreach (var game in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    @if (game.Images != null && game.Images.Count > 0)
                    {
                        <img src="@game.Images.First().ImageUrl" class="card-img-top" alt="@game.GameName" />
                    }
                    else
                    {
                        <img src="/images/placeholder.png" class="card-img-top" alt="No Image Available" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@game.GameName</h5>
                        <p class="card-text">@game.Description</p>
                        <p class="card-text">Price: @game.Price.ToString("C")</p>
                        <a href="@Url.Action("Details", "Games", new { id = game.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
