@model UserViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Sidebar {
    @await Html.PartialAsync("~/Views/Shared/Components/SideBar/_Sidebar.cshtml")
}
<div class="d-flex">    
    <div class="main-content">
        <h2>My Profile</h2>
        <div class="form-group">
            <label>Profile Picture</label>
            <div>
                <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle" width="150" height="150" />
            </div>
        </div>

        <div class="form-group">
            <label>First Name</label>
            <p class="form-control-static">@Model.FirstName</p>
        </div>

        <div class="form-group">
            <label>Last Name</label>
            <p class="form-control-static">@Model.LastName</p>
        </div>

        <div class="form-group">
            <label>Username</label>
            <p class="form-control-static">@Model.UserName</p>
        </div>

        <div class="form-group">
            <label>Phone Number</label>
            <p class="form-control-static">@Model.PhoneNumber</p>
        </div>              
    </div>
</div>
