@model GameSaleProject_Entity.ViewModels.GameViewModel
@{
    ViewData["Title"] = "UpdateGame";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>UpdateGame</h1>

@using (Html.BeginForm("UpdateGame", "PublisherProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PublisherId)

    <div class="form-group">
        @Html.LabelFor(model => model.GameName)
        @Html.TextBoxFor(model => model.GameName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.GameName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Developer)
        @Html.TextAreaFor(model => model.Developer, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Developer, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId, "Category")
        @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as SelectList, "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Platform)
        @Html.TextAreaFor(model => model.Platform, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Platform, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Card Image")
        <input type="file" name="cardImage" class="form-control" />
    </div>

    <div class="form-group">
        @Html.Label("Display Images")
        <input type="file" name="displayImages" multiple="multiple" class="form-control" />
    </div>

    @if (Model.Images != null && Model.Images.Any())
    {
        <div class="form-group">
            <h4>Current Images:</h4>
            <ul>
                @foreach (var image in Model.Images)
                {
                    <li>
                        <img src="@image.ImageUrl" alt="@image.Name" style="width: 100px;" />
                        @image.Name (@image.ImageType)
                    </li>
                }
            </ul>
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @type = "number", step = "0.01" })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Discount)
        @Html.TextBoxFor(model => model.Discount, new { @class = "form-control", @type = "number", step = "0.01" })
        @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Update Game</button>
}

<div class="mt-3">
    <a asp-action="ManageGames" class="btn btn-secondary">Back to Manage Games</a>
</div>