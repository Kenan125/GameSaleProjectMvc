@model GameSaleProject_Entity.ViewModels.PublisherViewModel

@{
    ViewData["Title"] = "Publisher Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Sidebar {
    @await Html.PartialAsync("~/Views/Shared/Components/SideBar/_Sidebar.cshtml")
}


<div class="p-4" style="background-color: #2C2D49; color: white; padding: 10px; border-radius: 8px;">
    <h2 class="mb-3">@Model.Name's Profile</h2>
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>First Name:</label>
                        <p>@Model.User.FirstName</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Last Name:</label>
                        <p>@Model.User.LastName</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>User Name:</label>
                        <p>@Model.User.UserName</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email:</label>
                        <p>@Model.User.Email</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phone Number:</label>
                        <p>@Model.User.PhoneNumber</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2 text-center mb-5">
            @if (!string.IsNullOrEmpty(Model.User.ProfilePictureUrl))
            {
                <img src="@Model.User.ProfilePictureUrl" alt="@Model.User.UserName's Profile Picture" class="rounded-circle" style="width: 200px; height: 200px;" />
            }
            else
            {
                <img src="/images/placeholder.png" alt="Default Profile Picture" class="img-fluid rounded-circle" />
            }
        </div>
    </div>
    
</div>



@if (Model.Games != null && Model.Games.Any())
{
    <div class="col-lg-9 mt-3">
    <div class="trending__product">
        <div class="row">
            <div class="col-lg-12 col-md-8 col-sm-8">
                <div class="section-title d-flex justify-content-between align-items-center">
                    <h4>Published Games</h4>

                </div>
            </div>
        </div>
        <div class="row">
        @foreach (var game in Model.Games)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    @if (game.Images != null && game.Images.Any(img => img.ImageType == "card"))
                    {
                        var cardImage = game.Images.First(img => img.ImageType == "card");
                        <img src="@cardImage.ImageUrl" class="card-img-top" alt="@game.GameName" />
                    }
                    else
                    {
                        <img src="/images/placeholder.png" class="card-img-top" alt="No Image Available" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@game.GameName</h5>
                        <p class="card-text">@game.Description</p>
                        <p class="card-text">
                            @if (game.Price == 0)
                            {
                                <span class="text-success">Free</span>
                            }
                            else if (game.Discount > 0)
                            {
                                <span class="text-decoration-line-through">@game.Price.ToString("C")</span>
                                <span class="text-danger">@(((decimal)game.Price * (decimal)(1 - (decimal)game.Discount / 100)).ToString("C"))</span>
                            }
                            else
                            {
                                <span>@game.Price.ToString("C")</span>
                            }
                        </p>

                        <!-- Details Button -->
                        <a asp-action="Detail" asp-controller="Game" asp-route-id="@game.Id" class="btn btn-info">Details</a>

                        <!-- Update Game Button -->
                        <a asp-action="UpdateGame" asp-controller="PublisherProfile" asp-route-gameId="@game.Id" class="btn btn-primary">Update Game</a>

                        <!-- Conditionally display "In Library" or "Add to Cart" -->
                        @if (game.IsInLibrary)
                        {
                            <button class="btn btn-success" disabled>In Library</button>
                        }
                        else
                        {
                            <!-- Add to Cart Button -->
                            <form asp-action="AddToCart" asp-controller="Cart" method="post" style="display:inline;">
                                <input type="hidden" name="gameId" value="@game.Id" />
                                <input type="hidden" name="price" value="@(((decimal)game.Price * (decimal)(1 - (decimal)game.Discount / 100)))" />
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                        }

                        <!-- Delete Game Button -->
                        <form asp-action="DeleteGame" asp-controller="Game" asp-route-gameId="@game.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this game?');">Delete Game</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
    </div>
    </div>
}
else
{
    <p>No games published yet.</p>
}
